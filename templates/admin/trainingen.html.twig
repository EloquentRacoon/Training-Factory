                <tr>
                    <th><a href="{{ path('app_admin_training_edit', {id: training.id}) }}" class="text-dark"><u>{{ training.naam }}</u></a></th>
                    <td>{{ training.desciption }}</td>
                    <td>{{ training.duration|date("H:i") }}</td>
